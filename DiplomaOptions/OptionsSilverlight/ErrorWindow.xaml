<controls:ChildWindow x:Class="OptionsSilverlight.ErrorWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="300" Height="240" 
           Title="Error Window">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <Button x:Name="OKButton" Content="Close" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <TextBlock Height="190" HorizontalAlignment="Left" Margin="21,22,0,0" Name="textBlock1" Text="TextBlock" VerticalAlignment="Top" Width="337" TextWrapping="Wrap" />
    </Grid>
</controls:ChildWindow>